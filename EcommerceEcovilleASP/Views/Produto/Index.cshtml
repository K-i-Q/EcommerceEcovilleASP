@model List<Produto>
@{ 
    DateTime dataHora = ViewBag.DataHora;
}


        <h2>Gerenciamento de Produtos</h2>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Preço</th>
                    <th scope="col">Quantidade</th>
                    <th scope="col">Criado em</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Produto item in Model)
                {
                    <tr class="table">
                        <th scope="row">@item.Nome</th>
                        <td>@item.Descricao</td>
                        <td>@item.Preco.Value.ToString("C2")</td>
                        <td>@item.Quantidade</td>
                        <td>@item.CriadoEm</td>
                        <td><a class="btn btn-success" asp-route-id="@item.ProdutoId" asp-action="Editar">Editar</a></td>
                        <td><a class="btn btn-outline-primary" asp-route-id="@item.ProdutoId" asp-action="Remover">Remover</a></td>
                    </tr>
                }
            </tbody>
        </table>

        <p><b>Dados atualizados em: </b>@dataHora</p>
