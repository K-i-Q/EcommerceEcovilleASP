@model Domain.Usuario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="col-md-12">

        <h2>Cadastrar Usuário</h2>

        <h4 class="text-danger">Faça a busca do CEP primeiro</h4>
        <hr />
        <div class="row">
            <form method="post">
                <fieldset class="float-left m-2">
                    <legend>Endereço</legend>
                    <div class="form-group">
                        <label asp-for="Endereco.Cep"></label>
                        <div class="input-group">
                            <input type="text" asp-for="Endereco.Cep" class="form-control" />
                            <div class="input-group-append">
                                <input type="submit" value="Buscar CEP" class="btn btn-danger" asp-action="BuscarCep" asp-controller="Usuario" />
                            </div>
                        </div>
                    </div>

                        <div class="form-group">
                            <label asp-for="Endereco.Logradouro"></label>
                            <input type="text" asp-for="Endereco.Logradouro" readonly class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Bairro"></label>
                            <input type="text" asp-for="Endereco.Bairro" readonly class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Localidade"></label>
                            <input type="text" asp-for="Endereco.Localidade" readonly class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Uf"></label>
                            <input type="text" asp-for="Endereco.Uf" readonly class="form-control" />
                        </div>
                </fieldset>

                    <fieldset class="float-left m-2">
                        <legend>Usuário</legend>

                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="text" asp-for="Email" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Senha"></label>
                            <input type="password" asp-for="Senha" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmacaoSenha"></label>
                            <input type="password" asp-for="ConfirmacaoSenha" class="form-control" />
                        </div>
                        <input type="submit" value="Cadastrar" class="btn btn-block btn-outline-primary" asp-action="Create" asp-controller="Usuario" />
                    </fieldset>

            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

